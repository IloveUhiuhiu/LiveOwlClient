<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefWidth="1550.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.client.liveowl.controller.LiveController">
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="750.0" BorderPane.alignment="CENTER">
         <content>
            <GridPane fx:id="gridImage" alignment="CENTER" prefHeight="750.0" />
         </content>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </ScrollPane>
   </center>
   <bottom>
      <AnchorPane prefHeight="38.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="exitButton" layoutX="751.0" layoutY="-1.0" mnemonicParsing="false" onAction="#handleExitButtonClick" style="-fx-background-color: red;" text="Kết thúc cuộc họp" textFill="#fcf5f5">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Label fx:id="lblInformation" alignment="CENTER" layoutX="10.0" opacity="0.0" prefHeight="30.0" prefWidth="274.0" style="-fx-background-color: #89B449; -fx-border-radius: 5px; -fx-background-radius: 5px;" styleClass="fade-label" stylesheets="@css/style.css" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
